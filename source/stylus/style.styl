		&__right
			float right
			width 34%
			
			.b-header-nav-search
				line-height 80px        
				display inline-block
				padding-left 10px
				width 100%
			
			img
				vertical-align middle
			.b-header-nav-setting
				position relative
			.b-header-nav-enc__item
