.b-header
	background url(../img/1.png) repeat-x

	&__inner
		max-width 1000px
		margin 0 auto
		width 100%
		margin-bottom 13px
		position relative
	&-nav
		//
		a
			font 15px $baseFontFamily
			color #fff
			&:hover
				background
			span
				margin-left 10px
		&__left
			float left
			width 35%
			
			
			img
				vertical-align middle
			.b-header-nav-logo, .b-header-nav-user
				display inline-block
				line-height 80px
				vertical-align middle
				padding-right 20px
			.b-header-nav-user
				position relative
				

		&__middle
			float left
			width 30%
			.counter
				background-clip padding-box
				display inline-block
				width 18px
				height 16px
				font-size 11px
				line-height 17px
				border-radius 2px
				text-align center
				box-shadow 0 1px 4px rgba(0,0,0,.5)
				background #ef1b29
				font-family 'PT Sans Caption Bold'
				background-image linear-gradient(bottom, rgba(79,79,79,.1) 0%, rgba(255,255,255,.1) 100%)
				
			
			
			.b-header-nav-button
				//  
			
			.b-header-nav-button__item
				display inline-block
				line-height 80px
				vertical-align middle
				padding 0 10px
				position relative
				
				
				img
					vertical-align middle
			
		&__right
			float right
			width 34%
			
			.b-header-nav-search
				line-height 80px        
				display inline-block
				padding-left 10px
				width 100%
			
			img
				vertical-align middle
			.b-header-nav-setting
				position relative
			.b-header-nav-enc__item
				position relative  
			.b-header-nav-search__item
